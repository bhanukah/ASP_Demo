@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

@if (Model.Count() == 0)
{
    <text>We don't have any Movies yet.</text>
}
else
{
    <table class="table table-bordered table-hover">
        @foreach (var m in Model)
        {
            <tr>
                <td>@m.Name</td>
            </tr>
        }
    </table>
}